        <label class="col-md-4 control-label" for="flUpload">Attachment</label>
        <div class="col-md-4">
            <input id="flUpload" name="flUpload" class="input-file" type="file">
        </div>
    </div>*@

    <div class="form-group">
        <label class="col-md-4 control-label" for="btnIndex"></label>
        <div class="col-md-4" style="text-align: center">
            <button id="btnIndex" name="btnIndex" class="btn btn-primary solrAction" type="submit">Index contact</button>
        </div>
    </div>
}